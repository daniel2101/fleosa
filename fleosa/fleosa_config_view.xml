<openerp>
    <data>
        <record id="view_fleosa_config" model="ir.ui.view">
            <field name="name">view.fleosa.config</field>
            <field name="model">fleosa.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <group col="6" colspan="4"> 
                    <field name="name"/>
                    <field name="user_id"/>
                    <group col="2" colspan="2">
                        <field name="activo" readonly="1"/>
                        <label string="" colspan="1"/>
                        <button name="activar" string="Desactivar otros" type="object" icon="gtk-execute"/>
                    </group>
                </group>
                <notebook colspan="4">
                    <page string="Ventas">
                    </page>
                    <page string="Compras">
                        <field name="diesel" domain="[('supplier', '=', True)]" options='{"quick_create": false}'/>
                        <field name="casetas" domain="[('supplier', '=', True)]" options='{"quick_create": false}'/>
                    </page>
                </notebook>
            </field>
        </record>
        
        <record id="action_fleosa_config" model="ir.actions.act_window">
            <field name="name">Configuración General</field>
            <field name="res_model">fleosa.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem name="Configuración" id="menu_config" parent="menu_fleosa" sequence="100"/>
        <menuitem action="action_fleosa_config" id="menu_action_fleosa_config" parent="menu_config"/>
        
    </data>
</openerp>
